//案件数順にソート
select tag_id ,count(item_id) from link_items_tags group by tag_id order by count(item_id) desc;


SELECT マスタ.ID ,T.CNT FROM マスタ LEFT JOIN ( SELECT ID ,COUNT(*) FROM テーブル GROUP BY ID ) AS T ON マスタ.ID=T.ID WHERE ( (T.CNT IS NULL) OR (T.CNT<=5));


select tags2.id,tags1.id,tags2.term from tags as tags1 left join tags as tags2 on tags1.id = tags2.id;
select id,term,count(link_items_tags.item_id) from tags inner join link_items_tags on tags.id = link_items_tags.tag_id group by id;

select tags1.id,tags1.term,count(link_items_tags.item_id) from
(select tags2.id,tags2.id,tags2.term from tags as tags1 left join tags as tags2 on tags1.id = tags2.id inner join link_items_tags on tags2.id = link_items_tags.tag_id group by tags2.id)
